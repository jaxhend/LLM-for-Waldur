# Base image
FROM ghcr.io/astral-sh/uv:python3.12-bookworm-slim

WORKDIR /ollama_worker

# Copy backend source code (context is ./ollama_worker)
COPY ./ /ollama_worker
WORKDIR /ollama_worker

# Add non-root user
RUN useradd --system --create-home --home-dir /home/appuser appuser \
    && chown -R appuser /ollama_worker
USER appuser

# Install Python dependencies from pyproject.toml
RUN uv sync

# Production entrypoint with Gunicorn + Uvicorn workers
CMD ["uv", "run", "ollama_worker.py"]
