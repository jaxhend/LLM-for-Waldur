# Base image
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y git curl \
    && rm -rf /var/lib/apt/lists/*

# Copy backend source code
RUN git clone --branch main --depth 1 https://github.com/jaxhend/LLM-for-Waldur.git /app/src

WORKDIR /app/src/backend

# Install Python dependencies from pyproject.toml
RUN pip install --no-cache-dir /app/src/backend

# Add non-root user
RUN adduser --system appuser
USER appuser

# Expose FastAPI port
EXPOSE 8000

# Production entrypoint with Gunicorn + Uvicorn workers
CMD ["gunicorn", "-k", "uvicorn.workers.UvicornWorker", "app.main:app", "--bind", "0.0.0.0:8000", "--workers", "4", "--log-level", "info"]

